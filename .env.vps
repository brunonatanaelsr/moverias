# =============================================================================
# MoveMarias Production Environment Configuration
# =============================================================================

# Django Core Settings
DEBUG=False
SECRET_KEY=your-super-secret-production-key-here-50-chars-minimum
ENVIRONMENT=production

# Domain and Security
ALLOWED_HOSTS=move.squadsolucoes.com.br,www.move.squadsolucoes.com.br
CSRF_TRUSTED_ORIGINS=https://move.squadsolucoes.com.br,https://www.move.squadsolucoes.com.br

# Database Configuration (PostgreSQL)
# This will be auto-configured by the installation script
DATABASE_URL=postgresql://username:password@localhost:5432/movemarias_prod

# Cache Configuration (Redis)
REDIS_URL=redis://localhost:6379/0

# Django Cryptography (for data encryption)
DJANGO_CRYPTOGRAPHY_KEY=your-32-character-encryption-key

# Email Configuration
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password

# Default email addresses
DEFAULT_FROM_EMAIL=Move Marias <noreply@movemarias.org>
SERVER_EMAIL=Move Marias <server@movemarias.org>

# File Storage - Local Filesystem ONLY (No AWS S3)
USE_S3=False

# Local Storage Paths (these will be created automatically)
STATIC_ROOT=/var/www/movemarias/staticfiles/
MEDIA_ROOT=/var/www/movemarias/media/

# Ensure these directories exist and have correct permissions:
# mkdir -p /var/www/movemarias/staticfiles
# mkdir -p /var/www/movemarias/media
# chown -R www-data:www-data /var/www/movemarias/staticfiles
# chown -R www-data:www-data /var/www/movemarias/media

# Logging Configuration
LOG_LEVEL=INFO

# Security Settings (Advanced)
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SECURE_HSTS_PRELOAD=True
SECURE_SSL_REDIRECT=True
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True
SECURE_BROWSER_XSS_FILTER=True
SECURE_CONTENT_TYPE_NOSNIFF=True

# Performance Settings
SESSION_ENGINE=django.contrib.sessions.backends.cache
SESSION_CACHE_ALIAS=default

# Monitoring (Optional - Sentry)
# SENTRY_DSN=https://your-sentry-dsn-here
# SENTRY_ENVIRONMENT=production

# Celery Configuration (if using background tasks)
# CELERY_BROKER_URL=redis://localhost:6379/1
# CELERY_RESULT_BACKEND=redis://localhost:6379/2
