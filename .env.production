# Production Environment Variables for Move Marias
# Copy this file to .env and update with your production values

# Django Settings
DEBUG=False
SECRET_KEY=your-super-secret-production-key-here-50-chars-minimum
ENVIRONMENT=production

# Allowed Hosts (add your domain)
ALLOWED_HOSTS=movemarias.org,www.movemarias.org,your-domain.com

# Database (PostgreSQL recommended for production)
DATABASE_URL=postgresql://username:password@localhost:5432/movemarias_prod

# Redis Cache (recommended for production)
REDIS_URL=redis://localhost:6379/0

# CSRF Trusted Origins
CSRF_TRUSTED_ORIGINS=https://movemarias.org,https://www.movemarias.org

# Django Cryptography (generate a secure key)
DJANGO_CRYPTOGRAPHY_KEY=your-32-character-encryption-key

# Email Settings (configure with your SMTP provider)
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=sistemainovax@gmail.com
EMAIL_HOST_PASSWORD=qnqwjdjiiuphlwoq

# Default email addresses
DEFAULT_FROM_EMAIL=Move Marias <noreply@movemarias.org>
SERVER_EMAIL=Move Marias <server@movemarias.org>

# AWS S3 Settings (optional, for file storage)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_STORAGE_BUCKET_NAME=movemarias-static
AWS_S3_REGION_NAME=us-east-1

# Logging
LOG_LEVEL=INFO
